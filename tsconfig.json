{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "moduleResolution": "node",
        "allowJs": false,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        }
    },
    "include": ["**/*.tsx", "**/*.ts"],
    "exclude": [".next", "node_modules"]
}
