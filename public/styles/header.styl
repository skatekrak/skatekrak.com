@import "./stylus-mq"
@import "./styleguide"

#header
	max-height: 100vh
	padding: 1.5rem 2rem
	z-index: 950

	+mq($from: "small")
		padding: 4.5rem 8rem 2rem

	+mq($from: "medium")
		display: flex
		flex-direction: column
		min-height: 100vh
		min-width: $header-width-medium
		max-width: $header-width-medium
		padding: 4rem 2rem 1rem
		background-color: $grey-900

	+mq($from: "large")
		min-width: $header-width-large
		max-width: $header-width-large

	&-top
		display: flex
		justify-content: space-between
		align-items: center

		&-logo
			width: 5rem

			+mq($from: "medium")
				width: 8rem
				margin: auto
				fill: white

		&-burger
			display: flex
			flex-direction: column
			align-items: flex-end
			width: 2rem

			+mq($from: "medium")
				display: none

			&-bar
				&-top
					width: 100%
					margin-bottom: .5rem

				&-bottom
					width: 60%

	&-nav
		&-container
			display: none
			flex-grow: 1
			flex-direction: column

			+mq($from: "medium")
				display: flex

		&-main
			margin: auto

			&-container
				display: flex
				flex-direction: column
				align-items: center
				color: blue

		&-subnav
			display: flex
			flex-direction: column
			align-items: center
			margin: 0 auto

			&-container
				display: flex
				justify-content: center

			& li
				list-style: none

			&-kraken
				display: flex
				align-items: center
				margin-bottom: 1.5rem
				margin-left: -.5rem

				+mq($from: "small")
					flex-direction: column
					margin-bottom: 3rem

				+mq($from: "medium")
					margin-bottom: 2rem

				& .header-nav-main-item-link
					&:after
						bottom: 13px
						right: 0
						width: 43%
						margin: 0 0 0 auto


				&-link
					position: relative
					display: flex
					align-items: center
					font-size: $fs-larger

					+mq($from: "medium")
						font-size: $fs-large

					&:hover
						& svg
							transform: scale(1.15) rotate(6deg)

					&:after
						top: inherit
						bottom: 8px

					& svg
						margin-right: .25rem
						width: 3.5rem
						transition: .3s

						+mq($from: "medium")
							width: 3.25rem

				&-logout
					position: relative
					display: flex
					align-items: center
					margin-left: 1rem
					padding-left: 1rem
					font-family: $ff-roboto-regular
					font-size: $fs-regular
					color: $grey-200
					border-left: 1px solid $grey-600
					transition: .2s

					&:hover
						color: $text-lighter

						& svg
							fill: $primary

					+mq($from: "small")
						margin-top: 1.5rem
						margin-left: 0
						padding-left: 0
						border: 0

					& svg
						width: 1.25rem
						margin-top: 1px
						margin-right: .25rem
						fill: $grey-200
						transition: .2s

		&-credits
			display: flex
			align-items: center
			justify-content: center
			margin-top: 1rem
			font-size: $fs-smallest
			text-align: center
			color: $grey-400

			& svg
				width: .5rem
				margin-right: .35rem
				fill: $grey-400


.header
	&-open
		position: absolute
		top: 0
		bottom: 0
		left: 0
		right: 0
		display: flex
		flex-direction: column
		background-color: $grey-900
		z-index: 1

		& #krak-logo-hand
			fill: $white

		& .header-top-burger-bar
			background-color: $white

	&-white
		& #krak-logo-hand
			fill: $white

		& .header-top-burger-bar
			background-color: $white

	&-dark
		background-color: $grey-900

		& #krak-logo-hand
			fill: $white

		& .header-top-burger-bar
			background-color: $white

	&-nav
		&-main-item
			position: relative
			margin-bottom: 1.5rem

			+mq($from: "small")
				margin-bottom: 2rem

			&:last-child
				margin-bottom: 0

			&-app
				&-container
					position: relative
					display: flex
					flex-direction: column
					align-items: center

				&-container-open
					display: flex
					height: 27px

					& .header-nav-main-item
						padding-top: .25rem
						margin-bottom: 0

						&:first-child
							margin-right: 1rem

						&:last-child
							margin-left: 1rem

					&-closer
						position: absolute
						top: calc(50% - .4rem)
						right: -2rem
						height: 1rem
						width: 1rem

						& .icon-cross
							fill: $text-lighter

						+mq($from: "large")
							right: -3rem

					& .header-nav-main-item-link
						font-size: $fs-regular

				&-separator
					height: 80%
					margin: auto
					border-right: 1px solid $grey-600

			&-link
				font-family: $ff-roboto-condensed-bold
				font-size: $fs-larger
				color: $text-lighter

				+mq($from: "medium")
					font-size: $fs-large

				&:after
					content: ''
					position: absolute
					top: 10px
					left: 0
					height: 4px
					width: 100%
					margin: auto
					background-color: #ff0318
					transform: rotate(-6deg)
					opacity: 0
					transition: .2s

				&:hover
					&:after
						opacity: 1
				
				&-active
					&:after
						opacity: 1

		&-subnav
			&-link
				color: $text-lighter

			&-item
				height: 2rem
				width: 2rem
				margin-right: 1.5rem

				+mq($from: "medium")
					margin-right: 1rem

				& svg
					height: 1.75rem
					width: 1.75rem
					margin: auto
					fill: $white
					transition: .2s

					+mq($from: "medium")
						height: 1.5rem
						width: 1.5rem
				
				&:first-child
					margin-right: 1rem

					+mq($from: "medium")
						margin-right: .6rem

				&:last-child
					margin-right: 0

					& svg
						height: 1.5rem
						width: 1.5rem

						+mq($from: "medium")
							height: 1.4rem
							width: 1.4rem

				&:hover
					& svg
						fill: $primary

				&-link
					display: flex
					width: 100%
					height: 100%

	&-top
		&-burger-bar
			height: 3px
			background-color: $grey-900
			border-radius: 3px
			transition: .2s

	&-small
		min-width: 4rem !important
		padding: 1rem .5rem !important

		& #header-nav
			&-main
				margin: auto auto 0

				&-container
					margin-bottom: 3rem
					padding-bottom: 0.5rem

					+mq($from: "infinite")
						margin-bottom: 6rem

					& .header-nav-main-item
						margin-bottom: 2.5rem

						+mq($from: "infinite")
							margin-bottom: 3rem

						&:last-child
							margin-bottom: 0

						&-link
							display: block
							font-size: $fs-medium
							text-transform: uppercase
							transform: rotate(-90deg)

			&-subnav-container
				flex-direction: column

			&-subnav .header-nav-subnav-item
				width: 1.5rem
				height: 1.5rem
				margin: 0 0 0.65rem
				
				+mq($from: "infinite")
					margin-bottom: 1rem

				&:first-child
					margin-bottom: 0.75rem

					+mq($from: "infinite")
						margin-bottom: 1.15rem

				&:last-child
					margin-bottom: 0

				& svg
					width: 1.35rem
					height: 1.35rem

				&:nth-child(0n + 3), &:nth-child(0n + 4)
					& svg
						width: 1.2rem
						height 1.2rem

			&-credits
				margin-top: 2rem

				+mq($from: "infinite")
					margin-top: 3rem

				& svg
					display: none
