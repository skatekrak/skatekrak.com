@import "../stylus-mq"
@import "../styleguide"


/* MAP PAGE STYLES */
#map-legend
	position: absolute
	left: 1.5rem
	bottom: 2rem
	max-width: 27rem
	background-color: $grey-900
	border-radius: 0.25rem
	border: 1.5px solid $grey-800
	box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
	z-index: 10

	&-trigger
		position: absolute
		left: 1.5rem
		bottom: 2rem
		display: flex
		align-items: center
		padding: 0.625rem 1rem
		font-family: $ff-roboto-condensed-bold
		font-size: $fs-small
		text-transform: uppercase
		color: $grey-100
		background-color: $grey-900
		border: 1.5px solid $grey-800
		border-radius: 0.25rem
		box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
		z-index: 10

		& svg
			width: 1.75rem
			height: 1.75rem
			margin-right: 1rem
			box-shadow: none

	&-scroll-container
		height: 60vh
		padding: 0 1.5rem 2rem
		overflow-y: auto

	& .krak-close-button
		position: absolute
		top: 1.5rem
		right: 1.5rem

	&-title
		margin: 1.5rem
		font-family: $ff-roboto-condensed-bold
		font-size: $fs-larger
		text-transform: uppercase
		color: $white

	&-desc
		margin-bottom: 2rem
		font-size: $fs-small
		line-height: 1.4
		color: $grey-300


.map-legend
	&-title
		margin-bottom: 1rem
		font-family: $ff-roboto-condensed-bold
		color: $primary

	&-divider
		height: .5px
		margin: 1.5rem 0 1rem
		background-color: $grey-800

	&-section-container
		display: flex
		flex-wrap: wrap
		font-size: $fs-small
		color: $white

	&-category
		display: flex
		align-items: center
		width: 50%
		margin-bottom: .5rem
		
		&:last-child
			margin-bottom: 0

		& svg
			height: 1.75rem
			width: 1.75rem
			margin-right: .5rem

	&-tags
		display: flex
		align-items: center
		margin-right: 1rem

		&:last-child
			margin-right: 0

		& svg
			height: 1.25rem
			width: 1.25rem
			margin-right: .5rem

	&-activity
		display: flex
		flex-direction: column
		align-items: center
		margin-top: 1rem

		&-container
			justify-content: space-around

		& .map-marker-icon
			width: 2.25rem

		& .map-marker-badges svg
			height: 1rem

		& .map-marker-activity
			width: 2.25rem
			height: 2.25rem
			z-index: -1

			&-inner
				animation: none

			&-middle
				animation: none

			&-outter
				animation: none

			&-firing
				transform: inherit

				& .map-marker-activity-inner
					transform: scale(0.3)
					opacity: .4

				& .map-marker-activity-middle
					transform: scale(0.75)
					opacity: .3

				& .map-marker-activity-outter
					transform: scale(1.2)
					opacity: .15

		&:last-child
			& .map-marker-activity-inner
				transform: scale(0.7)
				opacity: .4

			& .map-marker-activity-middle
				transform: scale(1.2)
				opacity: .2

			& .map-marker-activity-outter
				transform: scale(1.7)
				opacity: .2

	&-coming-soon
		color: $grey-400
