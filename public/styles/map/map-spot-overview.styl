@import "../stylus-mq"
@import "../styleguide"


.map-spot-overview
	margin-top: -1.5rem
	z-index: 9

	& .mapboxgl-popup-content
		padding: 0.5rem
		background: none
		box-shadow: none

	&-container
		position: relative
		text-align: left

	&-name
		max-width: 275px
		font-family: $ff-roboto-black
		font-size: $fs-larger
		color: $white
		text-shadow: 2px 2px 0px rgba(0, 0, 0, 0.3)

		&-center
			text-align: center

	&-cover
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		width: 100%
		height: 100%
		background-position: center
		background-size: cover

		&-container
			position: relative
			height: 0
			width: 275px
			padding-top: 56.25%
			margin-top: .5rem
			overflow: hidden
			background-color: $grey-800
			border-radius: .25rem
			box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.4)

	&-overlay
		position: absolute
		right: 0
		bottom: 0
		left: 0
		display: flex
		align-items: center
		padding: 0.5rem 1rem
		background-color: rgba(31, 31, 31, 0.75)
		z-index: 1

		&--relative
			position: relative
			background-color: $grey-900

		&-amount
			&-container
				display: flex
				align-items: center
				margin-right: 1rem

				&:last-of-type
					margin-right: 0

				& .krak-icon
					width: 1.5rem
					height: 1.5rem
					margin-right: 0.25rem
					fill: $grey-100
					border-radius: 1rem

			&-number
				font-family: $ff-roboto-bold
				font-size: $fs-regular
				color: $grey-100
