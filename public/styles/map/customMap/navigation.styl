@import "../stylus-mq"
@import "../styleguide"


#custom-map-navigation
	position: absolute
	top: 4rem
	left: 1.5rem
	min-width: 20rem
	width: 27.25rem
	color: $grey-400
	background-color: $grey-900
	border: 1.5px solid $grey-800
	border-radius: 0.25rem
	box-shadow: $shadowSurface
	z-index: 1000

	&-close
		display: inline-flex
		align-items: center
		padding: 0.75rem 1.5rem
		font-size: $fs-small

		& svg
			width: 1rem
			margin-right: .5rem
			fill: $grey-400
			transform: rotate(180deg)

	&-main
		display: flex
		align-items: center
		padding: 0.75rem 1.25rem 1rem

		&-logo
			max-width: 100%
			margin: auto

			&-container
				display: flex
				width: 2.5rem
				height: 2.5rem
				margin-right: .5rem
				background-color: white
				border-radius: 100%


		&-container
			display: flex
			align-items: baseline
			padding-top: 0.25rem

		&-title
			width: 12rem
			margin-right: auto
			font-family: $ff-roboto-condensed-bold
			font-size: $fs-larger
			color: $grey-100

		& .custom-map-navigation-link
			font-size: $fs-regular
			color: $grey-200

			&:first-of-type
				margin: 0 1rem 0 1rem

		& .custom-map-navigation-link-spot
			display: flex

			& svg
				width: 1.5rem
				fill: $grey-400
				transition: .075s

			&--open
				& svg
					transform: rotate(90deg)

	&-extension
		margin-top: -1px
		background-color: $grey-900
		border: 1.5px solid $grey-800
		border-radius: 0.25rem
		box-shadow: $shadowSurface

		&-about
			padding: 1.5rem

			&-header
				display: flex
				align-items: center
				justify-content: space-between
				margin-bottom: 1rem

				& h3
					font-family: $ff-roboto-condensed-bold
					font-size: $fs-large
					color: $grey-100

				& svg
					width: 1.25rem
					fill: $grey-100

		&-spots
			&-search
				display: flex
				justify-content: space-between
				align-items: center
				padding: 0.75rem 1rem
				border-bottom: 1.5px solid $grey-800

				&-input
					width: 100%
					font-family: $ff-roboto-regular
					font-size: $fs-regular
					color: $grey-100
					font-weight: 600
					letter-spacing: 0.2px
					background-color: inherit

					&:placeholder
						color: $grey-400

				& svg
					min-width: 1.5rem
					fill: $grey-400

				& button
					display: flex
					margin-left: 1rem

