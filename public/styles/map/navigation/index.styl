@import "../stylus-mq"
@import "../styleguide"

@import "./filters"
@import "./search"


#map-navigation
	z-index: 990

	&-top-nav
		position: absolute
		top: 1.5rem
		left: 1.5rem

		&-main
			position: relative
			display: flex
			align-items: center
			padding: 0.75rem
			padding-left: 0rem
			background-color: $grey-900
			border: 1.5px solid $grey-800
			border-radius: 0.25rem
			box-shadow: $shadowSurface
			z-index: 1

			& .divider-vertical
				height: 1.5rem
	
	&-link-home
		padding: 0.5rem 1.5rem
		margin: -0.59375rem 0

		& svg
			display: block
			width: 3.5rem
			height: 2.5rem
			fill: $white
