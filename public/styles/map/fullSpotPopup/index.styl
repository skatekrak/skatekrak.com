@import "../stylus-mq"
@import "../styleguide"

@import "./nav"

.full-spot-overlay
	position: absolute
	padding: 2.5rem 1.5rem 1.5rem
	background: rgba(31, 31, 31, 0.5)

.full-spot-container
	padding: 0 !important
	border: 1.5px solid $grey-800
	border-radius: 0.25rem
	background-color: $grey-900
	box-shadow: 0px 0px 16px rgba(0, 0, 0, 0.25)

.full-spot-close-button
	display: flex
	align-items: center
	justify-content: center
	width: 1.75rem
	height: 1.75rem
	background-color: $grey-800
	border-radius: 50%

	& svg
		width: 1.1.755rem
		height: 1.25rem
		fill: $grey-300

#map-full-spot-popup
	position: relative
	display: grid
	grid-template-columns: minmax(16rem, 1fr) 3fr
	grid-template-areas: 'fullSpotNav fullSpotMain'
	width: 64rem
	height: 40rem
	color: $grey-100

	+mq($from: "mediumLarge")
		grid-template-columns: minmax(18rem, 1fr) 3fr

	+mq($from: "large")
		grid-template-columns: 20rem 3fr
		width: 80rem
		height: 44rem
	
	+mq($from: "infinite")
		width: 88rem
		height: 52rem

	&-nav-container
		grid-area: fullSpotNav
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
	
	&-main-container
		grid-area: fullSpotMain
		position: relative
		// background-color: $grey-800

