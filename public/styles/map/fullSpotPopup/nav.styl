@import "../stylus-mq"
@import "../styleguide"

#map-full-spot-popup-nav
	position: relative
	display: flex
	flex-direction: column
	height: 100%
	padding: 1.5rem 0 2rem;
	overflow-y: auto

	&-header
		margin:0 1.5rem 2rem
		border-bottom: 1px solid $grey-800

		&-city
			margin-bottom: 0.5rem
			font-size: $fs-smaller
			text-transform: uppercase

			& span
				font-family: $ff-roboto-black

		&-name
			font-family: $ff-roboto-black
			font-size: $fs-larger

		&-street
			margin-top: 0.5rem
			font-size: $fs-smaller
			font-style: italic
			color: $grey-300

		&-extra
			display: flex
			align-items: center
			margin: 1.5rem 0

			& svg
				width: 3rem
				margin-right: 1.5rem

			&-time
				&-title
					margin-bottom: 0.25rem
					font-size: $fs-smaller
					font-style: italic
					color: $grey-300
					
					& span
						font-size: $fs-smallest

				&-formated
					font-family: $ff-roboto-condensed-bold
					font-size: $fs-medium

	&-main
		flex-grow: 1
		display: flex
		flex-direction: column

	&-footer
		margin-top: 1rem

		+mq($from: "large")
			margin-top: 2rem

		& .map-full-spot-popup-nav-link
			font-family: $ff-roboto-condensed-regular
			text-transform: inherit

			& svg
				width: 1.25rem


.map-full-spot-popup-nav
	&-link
		display: flex
		align-items: center
		justify-content: flex-end
		width: 100%
		padding: 0.25rem 1.5rem
		font-family: $ff-roboto-condensed-bold
		font-size: $fs-regular
		color: $grey-100
		text-transform: uppercase

		&:nth-of-type(3n + 0)
			margin-bottom: 1rem
		
		&:last-of-type
			margin-bottom: auto

		& svg
			width: 1.5rem
			margin-left: 1rem
			fill: $grey-100
			opacity: 0
			transition: .1s

		&:hover
			& svg
				opacity: 1

		+mq($from: "infinite")
			&:nth-of-type(3n + 0)
				margin-bottom: 1.5rem

		&--active
			& svg
				opacity: 1
