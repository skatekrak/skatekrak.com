@import "../stylus-mq"
@import "../styleguide"

#map-full-spot-popup-main
	display: flex
	flex-direction: column
	height: 100%

	&-header
		width: 100%
		padding: 2rem 3rem
		transition: .3s

		+mq($from: "large")
			padding: 3rem 5rem

		&.map-full-spot-popup-main-header--fixed
			padding: 0rem 3rem
			box-shadow: 0px 0px 16px rgba(0, 0, 0, 0.25)

			+mq($from: "large")
				padding: 0rem 5rem

		&-nav
			display: flex
			align-items: center


.map-full-spot-popup-main-header-nav-item
	padding: 1rem
	font-size: $fs-regular
	color: $grey-500
	text-decoration: underline

	&:hover
		color: $grey-300

	&:first-child
		margin-left: -1rem


	&--selected
		font-family: $ff-roboto-bold
		color: $grey-100
		text-decoration: none
