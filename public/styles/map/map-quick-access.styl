@import "../stylus-mq"
@import "../styleguide"

#map-quick-access
	position: absolute
	top: 4rem
	right: 1.5rem
	display: flex
	flex-direction: column
	align-items: center
	padding: 0.5rem 0
	background-color: $grey-900
	border: 1.5px solid $grey-800
	border-radius: 0.25rem
	box-shadow: $shadowSurface
	z-index: 1000

	& .map-quick-access-item
		position: relative
		display: flex
		padding: 0.375rem  0.75rem

		&:hover
			& .map-quick-access-item-description
				display: block

		&--selected
			&:after
				content: ''
				position: absolute
				top: 0.5rem
				bottom: 0.5rem
				left: 0
				display: block
				width: 0.25rem
				background-color: $primary

		& .spinner-circle
			width: 1.5rem
			height 1.5rem
			margin: auto

			& .path
				stroke: $grey-700

		&-image
			width: 100%
			height: 100%
			margin: auto
			background-color: $grey-800
			border: 1.5px solid $grey-700
			border-radius: 100%

			&--not-selected
				opacity: 0.5;

			&-container
				display: flex
				width: 2.5rem
				height: 2.5rem


		&-description
			display: none
			position: absolute
			left: -18rem
			width: 17.5rem
			top: 0rem
			padding: 1rem
			text-align: left
			background-color: $grey-900
			border: 1.5px solid $grey-800
			border-radius: 0.25rem
			box-shadow: $shadowSurface

		&-header
			display: flex
			align-items: center
			justify-content: space-between

			& svg
				width: 1.5rem
				fill: $white

		&-name
			font-family: $ff-roboto-condensed-bold
			font-size: $fs-large
			color: $grey-100

		&-body
			margin: 0.5rem 0 0.75rem
			font-size: $fs-small
			color: $grey-200

		&-spots
			font-size: $fs-small
			color: $grey-100
