{
  "name": "@krak/monorepo",
  "dependencies": {
    "@manypkg/cli": "^0.21.4",
    "turbo": "^2.0.4"
  },
  "engines": {
    "node": "20",
    "bun": "1.1.12"
  },
  "packageManager": "bun@1.1.12",
  "private": false,
  "scripts": {
    "lint": "turbo lint && manypkg check",
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "dev:web": "turbo dev --filter=@krak/web",
    "dev:api": "turbo dev --filter=@krak/api",
    "dev:carrelage": "turbo dev --filter=@krak/carrelage",
    "build:api": "turbo build --filter=@krak/api",
    "build:carrelage": "turbo build --filter=@krak/carrelage",
    "start:api": "turbo start --filter=@krak/api"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "core-js"
  ]
}
