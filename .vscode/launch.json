{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome Client",
            "type": "chrome",
            "request": "launch",
            "url": "https://skatekrak.local.test",
            "userDataDir": "${env:HOME}/Library/Application Support/Google/ChromeVSCode",
            "webRoot": "${workspaceFolder}",
            "disableNetworkCache": true
        },
        {
            "name": "Docker Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["dev:docker"],
            "restart": true,
            "timeout": 60000,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector",
            "address": "localhost",
            "port": 9229,
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
        }
    ],
    "compounds": [
        {
            "name": "Docker + Chrome",
            "configurations": ["Docker Server", "Chrome Client"]
        }
    ]
}
