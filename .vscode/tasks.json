{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "npm",
            "script": "build:ts",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "start",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": [
                        {
                            "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Debugger listening on",
                        "endsPattern": "Compiled successfully"
                    }
                }
            ]
        },
        {
            "label": "lint",
            "type": "npm",
            "script": "lint:ts",
            "group": "test",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$tslint5"
        }
    ]
}
