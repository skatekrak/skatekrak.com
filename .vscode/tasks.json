{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "npm",
            "script": "build",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "start",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "presentation": {
                "panel": "dedicated"
            },
            "promptOnClose": true,
            "group": "build",
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": [
                        {
                            "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "info: application started on http://localhost:3333/",
                        "endsPattern": "info: compiled"
                    }
                }
            ]
        },
        {
            "label": "start:win",
            "type": "npm",
            "script": "start:win",
            "isBackground": true,
            "presentation": {
                "panel": "dedicated"
            },
            "promptOnClose": true,
            "group": "build",
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": [
                        {
                            "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "info: application started on http://localhost:3333/",
                        "endsPattern": "info: compiled"
                    }
                }
            ]
        },
        {
            "label": "flow",
            "type": "npm",
            "script": "flow",
            "group": "test",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "lint",
            "type": "npm",
            "script": "lint",
            "group": "test",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$eslint-stylish"
        }
