        {
            "label": "start",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": [
                {
                    "owner": "custom",
                    "pattern": [
                        {
                            "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*Attaching to.*",
                        "endsPattern": ".*Ready on.*"
                    }
                }
            ]
        }
    ]
