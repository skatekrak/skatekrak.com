/**
 * Generic class
**/
.club
	&-section
		&-divider
			width 50%
			margin: auto
			border-bottom: 1px solid $grey-200

		&-title
			margin-bottom: 2rem
			font-family: $ff-roboto-condensed-bold
			font-size: $fs-larger2
			text-align: center

		&-subtitle
			margin: -1.5rem auto 2rem
			font-family: $ff-roboto-condensed-bold
			font-size: $fs-medium
			text-align: center

		&-desc
			font-size: $fs-medium
			text-align: center

			& br
				display: none

				+mq($from: "medium")
					display: inline

	&-cta
		margin: auto
		padding: 1rem 4rem !important
		font-size: $fs-large !important
		text-transform: uppercase
		color: $surface-grey-light
		background-color: $grey-900
		border: 2px solid transparent
		border-radius: 0 !important
		box-shadow: 0px 5.53672px 11.0734px rgba(0, 0, 0, 0.25);
		cursor: pointer

		&:hover
			color: $grey-900
			background-color: $white
			border: 2px solid $grey-900
			transform: scale(1.05)

/**
 * ANIMATIONS
**/
@keyframes bouncingArrow {
	from {
		transform: translateY(0) rotate(90deg)
	}
	to {
		transform: translateY(.5rem) rotate(90deg)
	}
}

@keyframes spiningSoldOut {
	from {
		transform: rotate(0deg)
	}
	to {
		transform: rotate(360deg)
	}
}
