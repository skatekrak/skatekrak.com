@import "./stylus-mq"
@import "./styleguide"

/********
 ** Test fluid typography
 ********/
fluid-type($properties, $min-vw, $max-vw, $min-value, $max-value)
	for $property in $properties
		{$property} $min-value
		
	@media screen and (min-width: $min-vw)
		for $property in $properties
			{$property} "calc(%s + %s * ((100vw - %s) / %s))" % ($min-value (remove-unit($max-value - $min-value)) $min-vw (remove-unit($max-vw - $min-vw)))

	@media screen and (min-width: $max-vw)
		for $property in $properties
			{$property} $max-value


