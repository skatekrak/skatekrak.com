@import "./stylus-mq"
@import "./styleguide"

/********
 ** Test fluid typography
 ********/
fluid-type($properties, $min-vw, $max-vw, $min-value, $max-value)
	for $property in $properties
		{$property} $min-value
		
	@media screen and (min-width: $min-vw)
		for $property in $properties
			{$property} "calc(%s + %s * ((100vw - %s) / %s))" % ($min-value (remove-unit($max-value - $min-value)) $min-vw (remove-unit($max-vw - $min-vw)))

	@media screen and (min-width: $max-vw)
		for $property in $properties
			{$property} $max-value


/* Club presentation page styles */
#club
	padding-top: 0

	+mq($from: "small")
		padding-top: 2rem

	+mq($from: "medium")
		display: flex
		flex-direction: column
		padding-top: 4rem

	&-hero
		position: relative
		display: flex
		flex-direction: column
		justify-content: space-between
		height: calc(100vh - 115px)
		padding-bottom: 1rem
		text-align: center
		color: $white

		+mq($from: "small")
			height : calc(100vh - 195px)

		+mq($from: "medium")
			height: calc(100vh - 4rem)

		&-logo
			width: 75%
			max-width: 325px
			margin: auto auto 0

			+mq($from: "medium")
				width: 27%
				min-width: 300px
				margin-top: 4rem

			+mq($from: "large")
				max-width: 500px
				margin: auto

		&-baseline
			display: none
			font-family: $ff-roboto-condensed-bold
			fluid-type(font-size, 20rem, 90rem, 0.875rem, 1.25rem)
			text-transform: uppercase
			color: $grey-100

			+mq($from: "medium")
				display: block

		&-title
			margin: 25% 0 12.5%
			fluid-type(margin-top, 20rem, 32rem, 2rem, 5rem)
			fluid-type(margin-bottom, 20rem, 32rem, 1rem, 3rem)
			font-family: $ff-roboto-condensed-regular
			fluid-type(font-size, 20rem, 90rem, 0.875rem, 1.125rem)
			text-transform: uppercase
			color: $grey-100

			+mq($from: "medium")
				margin-top: 4rem
				margin-bottom: 2rem

				+mq($from: "large")
					margin-top: 0

		&-cta
			margin: 0 auto auto
			fluid-type(margin-bottom, 20rem, 32rem, 2rem, 3rem)
			fluid-type(font-size, 20rem, 64rem, 1rem, 1.125rem)
			color: $grey-900
			text-transform: uppercase
			background-color: $white
			box-shadow: $box-shadow-1
			transition: .3s

			+mq($from: "medium")
				font-size: 1rem
			
			&:hover
				color: $white
				background-color: $primaryLight
				transform: scale(1.05)

		&-discover-more
			display: flex
			flex-direction: column
			align-items: center
			font-size: $fs-smaller
			text-transform: uppercase
			color: $grey-300

			&-arrow
				width: 1rem
				margin: 0 auto
				fill: $grey-300
				transform: rotate(90deg)
				animation: .6s infinite alternate bouncingArrow
				animation-timing-function: cubic-bezier(.34,.75,.72,.99)

		&-bg-image
			display: block
			height: 100%
			background-image: url("/static/images/club-presentation-bg.jpg")
			background-position: 20% 50%
			background-size: cover
			transform: scale(1.02)
			filter: blur(2px)

			+mq($from: "medium")
				background-position: center

			&-container
				position: absolute
				top: -10rem
				left: -2rem
				right: -2rem
				bottom: 0
				z-index: -1
				overflow: hidden

				+mq($from: "small")
					top: -14rem
					left: -8rem
					right: -8rem

				+mq($from: "medium")
					top: -4rem
					left: -4rem
					right: -4rem

			&-credits
				position: absolute
				left: calc(100% - 1rem)
				bottom: 2rem
				white-space: nowrap
				font-size: $fs-smallest
				color: $grey-400
				z-index: 1
				transform: rotate(-90deg)
				transform-origin: top left

	&-main
		padding-top: 2rem

		+mq($from: "small")
			padding-top: 4rem

		+mq($from: "large")
			min-width: 1024px
			margin: auto

	&-intro
		position: relative
		margin: 0 -1rem
		padding: 2rem 2rem 4rem
		background-color: $surface-grey-light
		box-shadow: $surface-shadow

		+mq($from: "small")
			padding: 4rem

		+mq($from: "medium")
			display: flex
			flex-direction: row-reverse
			margin: inherit
			padding: 4rem 2rem

		+mq($from: "large")
			padding: 4rem

		&-content
			+mq($from: "medium")
				display: flex
				flex-direction: column
				width: 60%

			+mq($from: "large")
				width: 40%
				margin: 3rem 0

			&-title
				font-family: $ff-roboto-condensed-bold
				font-size: $fs-larger2
				margin-bottom: 1rem

			&-desc
				margin-bottom: 2rem
				font-size: $fs-medium
				color: $grey-400

			&-kraken
				display: flex
				align-items: center
				margin-bottom: 2rem
				font-size: $fs-small
				color: $grey-500

				&-images
					display: flex
					align-items: center

					& .club-intro-content-kraken
						width: 3rem
						margin-left: -1rem

						+mq($from: "large")
							width: 4rem

					& .club-intro-content-kraken:first-child
						margin-left: 0

					& .club-intro-content-kraken:last-child
						margin-right: 1rem

					& .club-intro-content-kraken > img
						width: 100%
						border-radius: 100%

			&-anchors
				margin-top: 2rem

				+mq($from: "medium")
					margin-top: auto

				& .club-intro-content-anchor
					display: block

				& .club-intro-content-anchor:hover
					& svg
						transform: translateX(.5rem)
				
				& .club-intro-content-anchor:first-child
					padding-bottom: 1rem
					margin-bottom: 1rem
					border-bottom: 1px solid $surface-divider

				& .club-intro-content-anchor-title
					display: flex
					justify-content: space-between
					align-items: center
					font-family: $ff-roboto-bold

					& svg
						width: 1.5rem
						transition: .3s

				& p
					margin-top: .25rem
					color: $grey-400
						

		&-image
			position: absolute
			left: 1rem
			right: 1rem
			min-height: 200px
			max-height: 500px
			margin-top: 2rem
			padding-bottom: 75%

			+mq($from: "small")
				left: 4rem
				right: 4rem
				padding-bottom: 33%

			+mq($from: "medium")
				position: relative
				left: 0
				right: 0
				height: 50vh
				width: 40%
				margin:auto 3rem auto 0
				padding-bottom: 0

			+mq($from: "large")
				height: 60vh
				width: 60%
				margin: 0 4rem 0 -8rem

			&:after
				content: ''
				position: absolute
				top: 0
				right: 0
				bottom: 0
				left: 0
				background: url('https://res.skatekrak.com/static/skatekrak.com/Krakens/crew_low.jpg')
				background-repeat: no-repeat
				background-size: cover
				background-position: 100%

				+mq($from: "medium")
					left: -8rem

				+mq($from: "large")
					left: -4rem


/**
 * ANIMATIONS
**/
@keyframes bouncingArrow {
	from {
		transform: translateY(0) rotate(90deg)
	}
	to {
		transform: translateY(.5rem) rotate(90deg)
	}
}
