@import "./stylus-mq"
@import "./styleguide"

/* Club presentation page styles */
#club
	padding-top: 0

	+mq($from: "small")
		padding-top: 2rem

	+mq($from: "medium")
		display: flex
		flex-direction: column
		padding-top: 4rem

	&-header
		position: relative
		display: flex
		flex-direction: column
		justify-content: space-between
		padding-bottom: 2rem
		margin-bottom: 6rem
		min-height: 60vh
		text-align: center
		color: $white

		+mq($from: "medium")
			min-height 70vh
			padding-bottom: 4rem

		&-title
			position: relative
			margin-bottom: .5rem
			font-family: $ff-roboto-black
			font-size: $fs-largest
			z-index: 2

			+mq($from: "medium")
				margin-bottom: .5rem
				color: $white

		&-subtitle
			position: relative
			font-size: $fs-regular
			color: $grey-100
			z-index: 2

			+mq($from: "medium")
				color: $white

		&-obsessed
			font-family: 'Permanent Marker', cursive
			font-size: $fs-largest
			transform: rotate(-9deg)
			z-index: 10

			+mq($from: "small")
				font-size: 3rem

			+mq($from: "large")
				font-size: 3.5rem

		&-bg-image
			display: block
			height: 100%
			background-image: url("/static/images/club-presentation-bg.jpg")
			background-position: 20% 50%
			background-size: cover
			transform: scale(1.02)

			+mq($from: "medium")
				background-position: center

			&-container
				position: absolute
				top: -10rem
				left: -2rem
				right: -2rem
				bottom: 0
				z-index: 1
				overflow: hidden

				+mq($from: "small")
					top: -14rem
					left: -8rem
					right: -8rem

				+mq($from: "medium")
					top: -4rem
					left: -4rem
					right: -4rem

			&-credits
				position: absolute
				left: calc(100% - 1rem)
				bottom: 2rem
				white-space: nowrap
				font-size: $fs-smallest
				color: $grey-400
				z-index: 1
				transform: rotate(-90deg)
				transform-origin: top left

	&-main
		text-align: center

		&-title
			margin-bottom: 3rem
			font-family: $ff-roboto-bold
			font-size: $fs-larger
			color: $grey-600

			+mq($from: "medium")
				font-size: $fs-large

		&-benefits
			position: relative

			+mq($from: "large")
				max-width: 900px
				margin: auto

		&-santa
			margin: 8rem 0 10rem
			font-size: $fs-larger
			color: $grey-400

			+mq($from: "medium")
				font-size: $fs-large

		&-youtube
			+mq($from: "large")
				max-width: 1200px
				margin: auto

			&-title
				margin-bottom: 2rem
				font-family: $ff-roboto-bold
				font-size: $fs-larger2
				color: $grey-800

	&-footer
		margin-top: 6rem
		text-align: center

		& .club-cta-container
			color: $grey-600

		&-skateistan
			position: relative
			margin: 6rem 0 0
			text-align: center
			color: $grey-600
			z-index: 3

			+mq($from: "medium")
				display: inline-flex
				align-items: center
				margin: 6rem auto 2rem
				font-size: $fs-small
				text-align: left

			& #citizens-skateistan
				display: block
				width: 4rem
				margin: 0 auto 1.5rem
				fill: $grey-600

				+mq($from: "medium")
					width: 3rem
					margin: 0 1rem 0 0

			&-link
				font-family: $ff-roboto-black-italic

			&-citizens
				+mq($from: "medium")
					display: block

.club
	&-cta
		color: $white
		background-color: $primary
		box-shadow: $box-shadow-1

		&:hover
			background-color: $primaryDark

		+mq($from: "large")
			font-size: $fs-medium

		&-container
			position: relative
			z-index: 3

		&-limited
			margin-bottom: 1rem

		&-shipping
			margin-top: 1rem
			font-size: $fs-medium

			& .emoji
				margin-right: .5rem
	
	&-main
		&-benefit
			margin-bottom: 3rem

			&-icon
				display: block
				max-width: 35%
				margin: auto

				& svg
					max-width 100%
					fill: $grey-200

			&-title
				margin-bottom: 1rem
				font-family: $ff-roboto-bold
				font-size: $fs-larger2

			&-text
				font-size: $fs-medium
				color: $grey-600

				&-item
					display: block
					margin-bottom: .5rem

					&:last-child
						margin-bottom: 0

		&-youtube
			&-item
				margin-bottom: 2rem

				&:last-child
					margin-bottom: 0

				&-title
					margin-top: 1rem
					font-family: $ff-roboto-condensed-bold
					font-size: $fs-large
					text-transform: uppercase
					color: $grey-800
					z-index: 3

				&-player
					position: absolute
					top: 0
					right: 0
					bottom: 0
					left: 0
					background-color: $grey-300
					border-radius: .25rem
					cursor: pointer

					&:hover
						&:after
							opacity: .25

					&:after
						content: ''
						position: absolute
						top: 0
						right: 0
						bottom: 0
						left: 0
						background-color: $grey-900
						border-radius: .25rem
						opacity: 0
						transition: .2s

					&-container
						position: relative
						padding-bottom: 56.25%
