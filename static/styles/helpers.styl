@import "./stylus-mq"
@import "./styleguide"

.black
	background-color: $black

.hide
	display: none !important

.show
	display: block !important

.show-header
	display: flex !important


.text-cap
	text-transform: uppercase


/* UI */
.button-primary
	padding: 1rem 2rem
	font-family: $ff-roboto-bold
	border-radius: .25rem
	transition: .3s


/* LAYOUT */
.inner-page-container
	width: 100%
	padding-top: $page-padding-top
	padding-bottom: $page-padding-bottom

	+mq($from: "medium")
		padding-top: $page-padding-top-medium

.burger-open
	& #header-top-burger-bar-top
		transform: rotate(-45deg) translateY(.5rem)

	& #header-top-burger-bar-bottom
		width: 100%
		transform: rotate(45deg) translateY(-.5rem)
