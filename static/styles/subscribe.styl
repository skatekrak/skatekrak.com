@import "./stylus-mq"
@import "./styleguide"

/* Subscribe popup styles */
#subscribe
	&-container
		display: grid
		grid-template-rows: 1fr 1fr
		grid-template-areas: "first"\
												 "second"
		margin: -2rem -1rem
		border-radius: .25rem
		overflow: auto

		+mq($from: "small")
			min-width: 650px
			margin: -3rem -2rem -2rem

		+mq($from: "medium")
			grid-template-columns: 1fr 1fr
			grid-template-rows: none
			grid-template-areas: "first second"
			width: 900px

		+mq($from: "large")
			width: 1024px

		&-separator
			position: absolute
			right: 0
			top: 3rem
			bottom: 3rem
			border-right: 1px solid $grey-200

	&-first
		&-container
			position: relative
			grid-area: first

	// Very first screen with background image
	&-promote
		display: flex
		flex-direction: column
		justify-content: space-between
		height: 100%
		padding: 3rem 1rem
		text-align: center
		color: $grey-100
		background-image: url('/static/images/club-presentation-bg.jpg')
		background-size: cover
		background-position: 0% 50%

		+mq($from: "small")
			padding: 3rem

		&-header
			&-join
				margin-bottom: 1rem
				font-family: $ff-roboto-bold
				color: $grey-200

			&-title
				margin-bottom: .5rem
				font-family: $ff-roboto-black
				font-size: $fs-larger
				color: #99FFCE

			&-subtitle
				font-size: $fs-small

		&-main
			&-price
				margin-bottom: .5rem
				font-family: $ff-roboto-black
				font-size: $fs-largest

		&-footer
			&-subscription
				margin-bottom: 1rem
				font-family: $ff-roboto-black

			&-remaining
				line-height: 1.4

	
	// Congrats first screen
	&-congrats
		&-first
			&-container
				display: flex
				flex-direction: column
				justify-content: center
				align-items: center
				text-align: center
				font-family: $ff-roboto-black-italic

				+mq($from: "medium")
					min-height: 50vh


			&-img
				max-width: 70%
				margin-bottom: 1rem

			&-title
				margin-bottom: 1rem
				font-size: $fs-largest
				color: $primary

			&-text
				margin-bottom: 3rem
				font-size: $fs-larger

				+mq($from: "small")
					margin-bottom: 0


.subscribe
	&-item-container
		display: flex
		flex-direction: column
		padding: 1rem

		&:first-child
			padding-top: 3rem

		+mq($from: "small")
			padding: 3rem

	&-title
		font-family: $ff-roboto-black
		font-size: $fs-larger2
		margin-bottom: 2rem
		
		+mq($from: "large")
			margin-bottom: 3rem

	&-subtitles-container
		display: flex

		+mq($from: "medium")
			justify-content: center

	&-subtitle
		margin-bottom: 2rem
		font-family: $ff-roboto-bold
		font-size: $fs-small
		cursor: default

		+mq($from: "tiny")
				font-size: $fs-regular

		+mq($from: "large")
			font-size: $fs-medium

		& .emoji
			margin-right: .5rem

		&--alone
			font-size: $fs-medium

		&--border
			padding-left: 1rem
			margin-left: 1rem
			border-left: 1px solid $grey-900

		&--inactive
			cursor: pointer
			opacity: .25

	&-content
		+mq($from: "medium")
			margin: auto 0

		&-description
			font-size: $fs-medium
			line-height: 1.5
			color: $grey-600
			margin-bottom: 2rem

			&-paragraph
				margin-bottom: 1rem

	&-payment-line
		display: flex
		margin-bottom: 2rem
		font-family: $ff-roboto-bold
		font-size: $fs-regular

		&-separator
			flex-grow: 1
			margin: 0 .5rem .3rem .5rem
			border-bottom: 1px solid $grey-800

	&-legal
		display: flex
		margin-top: 2rem

		+mq($from: "medium")
			justify-content: center
			margin-top: 3rem

		&-link
			font-family: $ff-roboto-bold
			font-size: $fs-small

	&-form
		& .stripe-element
			margin-bottom: 1rem

		& .checkbox-container
			color: $grey-600

		&-submit
			margin: 2rem 0 0 auto
			color: $white
			background-color: $grey-900

			&:hover
				background-color: $black

			+mq($from: "large")
				margin: 3rem 0 0 auto
