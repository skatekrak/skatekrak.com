@import "./stylus-mq"
@import "./styleguide"

/* Subscribe popup styles */
#subscribe
	// Very first screen with background image
	&-promote
		display: flex
		flex-direction: column
		justify-content: space-between
		height: 100%
		padding: 3rem 1rem
		text-align: center
		color: $grey-100
		background-image: url('/static/images/club-presentation-bg.jpg')
		background-size: cover
		background-position: 0% 50%

		+mq($from: "small")
			padding: 3rem

		&-header
			&-join
				margin-bottom: 1rem
				font-family: $ff-roboto-bold
				color: $grey-200

			&-title
				margin-bottom: .5rem
				font-family: $ff-roboto-black
				font-size: $fs-larger2
				color: #99FFCE

			&-subtitle
				font-size: $fs-small

		&-main
			&-price
				margin-bottom: .5rem
				font-family: $ff-roboto-black
				font-size: $fs-largest

		&-footer
			&-limited
				line-height: 1.4

	
	// Congrats first screen
	&-congrats
		&-first
			&-container
				display: flex
				flex-direction: column
				justify-content: center
				align-items: center
				text-align: center
				font-family: $ff-roboto-black-italic

				+mq($from: "medium")
					min-height: 50vh

			&-img
				max-width: 70%
				margin-bottom: 1rem

			&-title
				margin-bottom: 1rem
				font-size: $fs-largest
				color: $primary

			&-text
				margin-bottom: 3rem
				font-size: $fs-larger

				+mq($from: "small")
					margin-bottom: 0

	&-special-code
		display: flex
		align-items: center
		margin-bottom: 1rem

		& .form-element
			margin-bottom: 0

		& svg
			margin-left: .5rem
			width: 1rem
			height 1rem


.subscribe
	&-subtitle
		& .emoji
			margin-right: .5rem

		&--alone
			font-size: $fs-medium

		&--border
			padding-left: 1rem
			margin-left: 1rem
			border-left: 1px solid $grey-900

		&--inactive
			cursor: pointer
			opacity: .25

	&-payment-line
		display: flex
		margin-bottom: 2rem
		font-family: $ff-roboto-bold
		font-size: $fs-regular

		&-separator
			flex-grow: 1
			margin: 0 .5rem .3rem .5rem
			border-bottom: 1px solid $grey-800

	&-legal
		display: flex
		margin-top: 2rem

		+mq($from: "medium")
			justify-content: center

		&-link
			font-family: $ff-roboto-bold
			font-size: $fs-small

	& .stripe-element
		margin-bottom: 1rem

	& .form-element[data-element-name="specialCode"]
		+mq($from: "tiny")
			width: 50%

		& input
			height: 2rem
			font-size: $fs-small
