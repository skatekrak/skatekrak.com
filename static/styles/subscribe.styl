@import "./stylus-mq"
@import "./styleguide"

/* Subscribe popup styles */
#subscribe
	&-promote
		display: flex
		flex-direction: column
		justify-content: space-between
		height: 100%
		padding: 3rem 1rem
		text-align: center
		color: $grey-100
		background-image: url('/static/images/club-presentation-bg.jpg')
		background-size: cover
		background-position: 0% 50%

		+mq($from: "small")
			padding: 3rem

		&-header
			&-join
				margin-bottom: 1rem
				font-family: $ff-roboto-bold
				color: $grey-200

			&-title
				margin-bottom: .5rem
				font-family: $ff-roboto-black
				font-size: $fs-larger2
				color: #99FFCE

			&-subtitle
				font-size: $fs-small

		&-main
			&-price
				margin-bottom: .5rem
				font-family: $ff-roboto-black
				font-size: $fs-largest

		&-footer
			&-limited
				line-height: 1.4

	
	// Congrats first screen
	&-congrats
		&-first
			&-container
				display: flex
				flex-direction: column
				justify-content: center
				align-items: center
				text-align: center
				font-family: $ff-roboto-black-italic

				+mq($from: "medium")
					min-height: 50vh

			&-img
				max-width: 70%
				margin-bottom: 1rem

			&-title
				margin-bottom: 1rem
				font-size: $fs-largest
				color: $primary

			&-text
				margin-bottom: 3rem
				font-size: $fs-larger

				+mq($from: "small")
					margin-bottom: 0

	&-special-code
		display: flex
		align-items: center
		margin-bottom: 1rem

		& .form-element
			margin-bottom: 0

		& svg
			margin-left: .5rem
			width: 1rem
			height 1rem


.subscribe
	&-subtitle
		& .emoji
			margin-right: .5rem

		&--alone
			font-size: $fs-medium

		&--border
			padding-left: 1rem
			margin-left: 1rem
			border-left: 1px solid $grey-900

		&--inactive
			cursor: pointer
			opacity: .25

	&-payment-line
		display: flex
		margin-bottom: 2rem
		font-family: $ff-roboto-bold
		font-size: $fs-regular

		&-separator
			flex-grow: 1
			margin: 0 .5rem .3rem .5rem
			border-bottom: 1px solid $grey-800

	&-legal
		display: flex
		margin-top: 2rem

		+mq($from: "medium")
			justify-content: center

		&-link
			font-family: $ff-roboto-bold
			font-size: $fs-small

	& .stripe-element
		margin-bottom: 1rem

	& .form-element[data-element-name="specialCode"]
		+mq($from: "tiny")
			width: 50%

		& input
			height: 2rem
			font-size: $fs-small


	&-summary
		grid-template-rows: none
		text-align: center

		& .modal-two-col-second-container
			background-color: $white
			border-radius: 0 0.25rem 0.25rem 0

		&-title
			margin-top: 1rem
			margin-bottom: .5rem
			font-family: $ff-roboto-condensed-bold
			font-size: $fs-larger2

			+mq($from: "medium")
				margin-top: 0

		&-price
			font-family: $ff-roboto-bold
			font-size: $fs-medium
			color: $grey-700

		&-app
			display: flex
			flex-direction: column
			align-items: center
			margin-right: 1.5rem

			& img
				max-width: 4rem
				box-shadow: 0px 1.62738px 6.50954px rgba(0, 0, 0, 0.15)
				border-radius: 1rem

			&:first-child
				& img
					border-radius: 100%

				&:after
					content: 'Krakito'

			&:nth-child(0n+2)
				&:after
					content: 'Krak App'

			&:last-child
				margin-right: 0

				&:after
					content: 'Krak Session'

			&:after
				display: block
				margin-top: .25rem
				padding: .25rem
				font-family: $ff-roboto-condensed-bold
				font-size: $fs-smaller
				color: $grey-700

			&-container
				display: flex
				align-items: center
				margin: 3rem auto 2rem

				+mq($from: "medium")
					margin: 3rem auto

		&-quarter-full
			display: flex
			align-items: center
			justify-content: center
			margin: 3rem auto

			+mq($from: "medium")
				margin: 2rem auto

			& span
				padding-bottom: .5rem
				font-family: $ff-roboto-condensed-bold
				font-size: $ff-smaller
				text-transform: uppercase
				color: $grey-700
				border-bottom: 2px solid $grey-700

			& svg
				width: 25%
				max-width: 5rem
				margin: 0 1rem

		&-benefits
			margin-bottom: 3rem

		&-benefit
			margin-bottom: 1rem
			font-family: $ff-roboto-bold
			font-size: $fs-medium

			&:last-child
				margin-bottom: 0

			& span
				font-family: $ff-roboto-regular
				font-size: $fs-regular

		&-cta
			padding: 1rem 3rem
			margin: 0 auto 2rem
			font-family: $ff-roboto-condensed-bold
			font-size: $fs-medium
			letter-spacing: 0.5px
			text-transform: uppercase
			color: $white
			background-color: $grey-900
			
			+mq($from: "medium")
				margin: auto auto 0

			&-text
				margin-bottom: .5rem
				font-size: $fs-small
				color: $grey-700

				+mq($from: "small")
					margin-top: auto

				& + .subscribe-summary-cta
					margin-top: 0.5rem

					+mq($from: "large")
						margin-top: 1rem
