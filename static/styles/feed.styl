@import "./stylus-mq"
@import "./styleguide"

/* LAYOUTS STYLES */
.feed
	&-sidebar
		z-index: 2

		+mq($from: "medium")
			padding-left: 3rem

		&-header
			margin-bottom: 2rem

			+mq($from: "medium")
				margin-bottom: 2rem
				border-bottom: 1px solid $grey-200

			+mq($from: "large")
				font-size: $fs-medium

			&-title
				margin-bottom: 1rem
				font-family: $ff-roboto-black
				font-size: $fs-larger2

				+mq($from: "medium")
					font-size: $fs-larger

				+mq($from: 1550px)
					margin-bottom: 2rem
					font-size: $fs-larger2

				&[data-name='news-sidebar-title']
					margin-bottom: 2rem
					font-size: 1.75rem

					+mq($from: "medium")
						font-size: $fs-large

					+mq($from: 1550px)
						font-size: 1.75rem
			
			&-subtitle
				display: block
				margin-top: .5rem
				font-size: $fs-large

			&-text
				+mq($from: "medium")
					padding-bottom: 2rem

		&-nav
			&-container
				margin-bottom: 2rem

			&-header
				display: flex
				justify-content: space-between
				align-items: baseline
				margin-bottom: 2rem

				&-title
					font-family: $ff-roboto-bold
					font-size: $fs-large
					// color: $grey-600

				&-toggle-button
					font-size: $fs-small
					color: $grey-400

					+mq($from: "medium")
						display: none

			&-main
				display: none
				background-color: $grey-100
				margin-bottom: 2rem

				+mq($from: "medium")
					display: block

				&-loader
					display: flex
					align-items: center
					font-size: $fs-small
					color: $grey-400

					& .spinner-circle
						width: 20px
						height: 20px
						margin-right: 1rem

						& .path
							stroke: $grey-400

				&--open
					display: block

				&-request
					margin-top: 2rem
					font-size: $fs-smaller
					color: $grey-600

					&-mail
						color: $primary

				&-controls
					margin: 2rem 0

					&-select
						display: flex
						margin: 1rem 0 2rem

						&-item
							font-family: $ff-roboto-bold
							font-size: $fs-medium
							color: $grey-400
							transition: .2s

							&:hover
								color: $grey-800

							&:first-child
								padding-right: 1rem
								margin-right: 1rem

					&-languages
						display: flex
						flex-wrap: wrap

						&-item
							display: flex
							align-items: center

							&:hover
								& .feed-sidebar-nav-main-controls-languages-item-name
									color: $grey-800

								& .feed-sidebar-nav-main-controls-languages-item-flag
									border: 2px solid $grey-800

							&-container
								margin: 0 1.5rem 1rem 0
							
								&:last-child
									+mq($from: "medium")
										margin: 0

							&-flag
								margin-right: .5rem
								width: 1.5rem
								border: 2px solid $grey-200
								border-radius: 4rem
								transition: .2s

							&-name
								font-family: $ff-roboto-bold
								font-size: $fs-regular
								text-transform: uppercase
								color: $grey-400
								transition: .2s


			&-option
				display: flex
				align-items: center
				margin-bottom: .65rem
				color: $grey-300
				
				&:last-child
					margin-bottom: 0

				// Box hover when desactivate
				&:not(.feed-sidebar-nav-option--active)
					& label:hover
						& .feed-sidebar-nav-option-logo
							height: 100%
							width: 100%

						& .feed-sidebar-nav-option-name
							font-family: $ff-roboto-bold

				&:hover
					& .feed-sidebar-nav-option-name
						font-family: $ff-roboto-regular
						color: $grey-400 !important

					& .feed-sidebar-nav-option-logo
						width: 2.25rem
						height 2.25rem
						opacity: .65

				&-label
					display: flex
					align-items: center

				& .spinner-circle
					width: 20px
					height: 20px
					margin: auto

					& .path
						stroke: $grey-600

				&-logo
					width: 2.25rem
					height 2.25rem
					margin: auto
					border-radius: 4rem
					opacity: .2
					transition: .2s

					&-container
						display: flex
						width: 2.5rem
						height 2.5rem
						margin-right: .75rem
						border-radius: 4rem
						overflow: hidden

				&--active
					& .feed-sidebar-nav-option-name
						font-family: $ff-roboto-bold
						color: $grey-800

					& .feed-sidebar-nav-option-logo
						height: 100%
						width: 100%
						opacity: 1

	&-searchbar
		position: relative
		margin-bottom: 2rem

		&-input
			display: block
			width: 100%
			padding: .75rem 1rem
			font-size: 1rem
			background-color: transparent
			border: 1.5px solid $grey-300
			border-radius: 5rem

			&:focus
				background-color: $white
				border: 1.5px solid $grey-800

			&--has-value
				background-color: $white
				border: 1.5px solid $grey-800

		&-icon
			display: none
			position: absolute
			top: calc(50% - .6125rem)
			right: 1rem
			width: 1.25rem
			height: 1.25rem

			& svg
				width: 100%
				height: 100%

	&-loader
		margin: auto

		& svg
			fill: $grey-600

	&-no-content
		margin: 4rem auto
		font-size: $fs-small
		color: $grey-600
		text-align: center

		&-title
			margin-bottom: .5rem
			font-family: "georgia", serif
			font-weight: 700
			font-size: $fs-larger
			color: $grey-400
