@import "./stylus-mq"
@import "./styleguide"

/* LAYOUTS STYLES */
.feed
	&-sidebar
		z-index: 2

		+mq($from: "medium")
			padding-left: 3rem

		&-header
			margin-bottom: 2rem

			+mq($from: "medium")
				margin-bottom: 2rem
				border-bottom: 1px solid $grey-200

			+mq($from: "large")
				font-size: $fs-medium

			&-title
				margin-bottom: 1rem
				font-family: $ff-roboto-black
				font-size: $fs-larger2

				+mq($from: "medium")
					font-size: $fs-larger

				+mq($from: 1550px)
					margin-bottom: 2rem
					font-size: $fs-larger2
			
			&-subtitle
				display: block
				margin-top: .5rem
				font-size: $fs-large

			&-text
				+mq($from: "medium")
					padding-bottom: 2rem

		&-nav
			&-container
				margin-bottom: 2rem

			&-header
				display: flex
				justify-content: space-between
				align-items: baseline
				margin-bottom: 2rem

				&-title
					font-family: $ff-roboto-bold
					font-size: $fs-large
					// color: $grey-600

				&-toggle-button
					font-size: $fs-small
					color: $grey-400

					+mq($from: "medium")
						display: none

			&-main
				display: none
				background-color: $grey-100
				margin-bottom: 2rem

				+mq($from: "medium")
					display: block

				&-loader
					display: flex
					align-items: center
					font-size: $fs-small
					color: $grey-400

					& .spinner-circle
						width: 20px
						height: 20px
						margin-right: 1rem

						& .path
							stroke: $grey-400

				&--open
					display: block

				&-request
					font-size: $fs-smaller
					color: $grey-600

					&-mail
						color: $secondary

				&-controls
					margin: 2rem 0

					&-select
						display: flex
						margin: 1rem 0 2rem

						&-item
							font-family: $ff-roboto-bold
							font-size: $fs-medium
							color: $grey-400
							transition: .2s

							&:hover
								color: $grey-800

							&:first-child
								padding-right: 1rem
								margin-right: 1rem

					&-languages
						display: flex
						flex-wrap: wrap

						&-item
							display: flex
							align-items: center

							&:hover
								& .feed-sidebar-nav-main-controls-languages-item-name
									color: $grey-800

								& .feed-sidebar-nav-main-controls-languages-item-flag
									border: 2px solid $grey-800

							&-container
								margin: 0 1.5rem 1rem 0
							
								&:last-child
									+mq($from: "medium")
										margin: 0

							&-flag
								margin-right: .5rem
								width: 1.5rem
								border: 2px solid $grey-200
								border-radius: 4rem
								border-radius: 100%
								transition: .2s

							&-name
								font-family: $ff-roboto-bold
								font-size: $fs-regular
								text-transform: uppercase
								color: $grey-400
								transition: .2s


			&-option
				display: flex
				align-items: center
				margin-bottom: .5rem
				font-size: $fs-small
				color: $grey-300
				
				&:last-child
					margin-bottom: 0

				/* Checkbox snippet : https://codepen.io/Vestride/pen/dABHx */
				& input[type="checkbox"]
					position: absolute
					margin: 0 
					opacity: 0

					& + label
						position: relative
						display: flex
						align-items: center

					& + label:before
						content: ''
						display: inline-block
						margin-right: 1rem
						width: 1.25rem
						height: 1.25rem
						vertical-align: text-top

					// Box hover when activate: checkmark "-"
					&:hover + label:after
						content: ''
						position: absolute
						left: 5px
						top: 15px
						width: 3px
						height: 3px
						background-color: $grey-500 !important
						box-shadow: 
								-2px 0px 0 $grey-500,
								2px 0px 0 $grey-500,
								4px 0px 0 $grey-500,
								6px 0px 0 $grey-500,
								8px 0px 0 $grey-500 !important
						transform: rotate(0deg) !important

					// Box checked
					// &:checked + label:before
						// background: $grey-600
						
					// Disabled state label.
					&:disabled + label
						color: $grey-200
						cursor: auto

					// Disabled box.
					&:disabled + label:before
						box-shadow: none
						background: $grey-200

					// Checkmark when active
					&:checked + label:after
						content: ''
						position: absolute
						left: 5px
						top: 15px
						width: 3px
						height: 3px
						box-shadow: 
							-2px 0px 0 $grey-600,
							2px 0px 0 $grey-600,
							4px 0px 0 $grey-600,
							4px -2px 0 $grey-600,
							4px -4px 0 $grey-600,
							4px -6px 0 $grey-600,
							4px -8px 0 $grey-600,
							4px -10px 0 $grey-600
						background-color: $grey-600
						transform: rotate(45deg)

				// Box hover when desactivate : checkmark "+"
				&:not(.feed-sidebar-nav-option--active) input:hover
					& + label:after
						background-color: $grey-500 !important
						box-shadow: 
							-2px 0px 0 $grey-500,
							2px 0px 0 $grey-500,
							4px 0px 0 $grey-500,
							6px 0px 0 $grey-500,
							8px 0px 0 $grey-500,
							10px 0px 0 $grey-500,
							4px 6px 0 $grey-500,
							4px 4px 0 $grey-500,
							4px 2px 0 $grey-500,
							4px -2px 0 $grey-500,
							4px -4px 0 $grey-500,
							4px -6px 0 $grey-500!important

					& + label
						&:hover .feed-sidebar-nav-option-logo
							opacity: .5

				&:hover .feed-sidebar-nav-option-name
					color: $grey-500 !important

				&-label
					display: flex
					align-items: center

				& .spinner-circle
					width: 20px
					height: 20px
					margin-right: 1rem

					& .path
						stroke: $grey-600

				&-logo
					width: 2rem
					height 2rem
					margin-right: .5rem
					border-radius: 100%
					opacity: .25

				&--active
					& .feed-sidebar-nav-option-name
						font-family: $ff-roboto-bold
						color: $grey-600

					& .feed-sidebar-nav-option-logo
						opacity: 1

	&-searchbar
		display: block
		width: 100%
		margin-bottom: 2rem
		padding: .75rem 1rem
		font-size: 1rem
		background-color: transparent
		border: 1.5px solid $grey-300
		border-radius: .25rem

		&:focus
			background-color: $white
			border: 1.5px solid $grey-800

	&-loader
		margin: auto

		& svg
			fill: $grey-600

	&-no-content
		margin: 4rem auto
		font-size: $fs-small
		color: $grey-600
		text-align: center

		&-title
			margin-bottom: .5rem
			font-family: "georgia", serif
			font-weight: 700
			font-size: $fs-larger
			color: $grey-400
