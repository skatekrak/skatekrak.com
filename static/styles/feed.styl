@import "./stylus-mq"
@import "./styleguide"

/* LAYOUTS STYLES */
.feed
	&-layout
		&-sidebar
			z-index: 2

			+mq($from: "medium")
				padding-left: 3rem

	&-loader
		margin: auto

		& svg
			fill: $grey-600

	&-no-content
		margin: 4rem auto
		font-size: $fs-small
		color: $grey-600
		text-align: center

		&-title
			margin-bottom: .5rem
			font-family: "georgia", serif
			font-weight: 700
			font-size: $fs-larger
			color: $grey-400
