@import "./stylus-mq"
@import "./styleguide"

/* NEWS STYLES */

/* Article item */
.news-article-club
	display: flex
	flex-direction: column
	justify-content: space-between
	min-height: 12rem
	height: 100%
	padding: 1.5rem
	background-color: $grey-800
	background: url('/static/images/club-presentation-bg.jpg')
	background-size: cover
	background-position: center
	border-radius: 0.25rem

	&-illustration
		max-width: 55%
		margin: 0 auto .5rem

		+mq($from: "tiny")
			max-width: 35%

		+mq($from: "small")
			max-width: 65%

		+mq($from: "medium")
			max-width: 70%
			margin: auto

		+mq($from: "large")
			max-width: 80%
			margin: auto

	&-cta
		padding: .5rem 1rem
		font-family: $ff-roboto-bold
		text-align: center
		color: $white
		border-radius: 0.25rem
		background-color: $primary
		box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.25)
		transition: .3s

		&:hover
			background-color: $primaryDark

		&-container
			display: flex
			flex-direction: column

			+mq($from: "tiny")
				margin: 0 auto

			+mq($from: "small")
				margin: 0

		&-text
			margin-bottom: .75rem
			font-family: $ff-roboto-bold
			text-align: center
			color: $grey-100

			+mq($from: "medium")
				margin-bottom: 1rem

.news-article
		position: relative
		margin-bottom: 2rem

		&:last-child
			margin-bottom: 0

		&-share
			position: absolute
			top: .5rem
			left: 1.5rem
			display: flex
			transition: .2s

			&:hover
				opacity: 1

			+mq($from: "medium")
				opacity: 0

			&-clipboard
				display: flex
				align-items: center
				color: $white
				background: $primary
				border-radius: 4rem
				transition: .2s
				
				&:hover
					background-color: $grey-900

				&--copied
					background-color: $grey-900
					padding-right: .5rem

				& svg
					height: 1rem
					width: 1rem
					margin: .25rem
					fill: $white

			& .SocialMediaShareButton
				margin-right: .5rem
				cursor: pointer

				&:last-child
					margin-right: 0

				& circle
					transition: .2s

				&:hover
					& circle
						fill: $grey-900

		&-link
			&:hover
				& .news-article-cover-img
					transform: scale(1.03)

				& + .news-article-share
					opacity: 1


		&-cover-img
			position: absolute
			top: 0
			right: 0
			bottom: 0
			left: 0
			background-color: $grey-200
			background-position: center
			background-size: cover
			background-repeat: no-repeat
			transition: .3s

			&-container
				position: relative
				padding-top: 45%
				margin-bottom: 1rem
				border-radius: 0.25rem
				overflow: hidden

				+mq($from: "small")
					padding-top: 56.25%

				+mq($from: "medium")
					padding-top: 75%

		&-title
			font-family: $ff-roboto-black
			color: $grey-800

		&-details
			display: flex
			margin: .5rem 0 1rem
			font-size: $fs-smaller
			color: $grey-400

			&-source
				display: flex

				&-link
					display: flex

					&:hover .news-article-details-source-name
						color: $grey-600

				&-name
					transition: .2s

				&-logo
					width: 1rem
					height 1rem
					margin-left: .2rem
					margin-right: .2rem
					background-color: green
					border-radius: 100%

			&-date
				color: $grey-600

		&-desc
			font-size: $fs-small
			line-height: 1.4
			color: $grey-600



#news
	&-container
		width: 100%

	&-articles
		&-no-content
			margin: 4rem auto 0
			font-size: $fs-small
			color: $grey-600
			text-align: center

			&-title
				margin-bottom: .5rem
				font-family: "georgia", serif
				font-weight: 700
				font-size: $fs-larger
				color: $grey-400

		&-loader
			display: flex
			flex-direction: column
			align-items: center
			margin: auto
			
			& svg
				fill: $grey-600

		&-no-more
			margin: 4rem 0
			text-align: center
