@import "./stylus-mq"
@import "./styleguide"

/* NEWS STYLES */

/* Articles */

.news-article
		margin-bottom: 2rem

		&:last-child
			margin-bottom: 0

		&-cover-img
			position: absolute
			top: 0
			right: 0
			bottom: 0
			left: 0
			background-color: blue
			border-radius: 0.25rem

			&-container
				position: relative
				padding-top: 45%
				margin-bottom: 1rem

				+mq($from: "small")
					padding-top: 56.25%

				+mq($from: "medium")
					padding-top: 75%

		&-title
			font-family: $ff-roboto-black
			color: $grey-800

		&-details
			display: flex
			margin: .5rem 0 1rem
			font-size: $fs-smaller
			color: $grey-400

			&-source
				display: flex

				&-link
					display: flex

					&:hover .news-article-details-source-name
						color: $grey-600

				&-name
					transition: .2s

				&-logo
					width: 1rem
					height 1rem
					margin-left: .2rem
					margin-right: .2rem
					background-color: green
					border-radius: 100%

			&-date
				color: $grey-600

		&-desc
			font-size: $fs-small
			line-height: 1.4
			color: $grey-600



/* Menu */
#news-menu
	&-container
		z-index: 2

		+mq($from: "medium")
			padding-left: 3rem

	&-sources
		&-nav
			display: flex
			justify-content: space-between
			align-items: baseline
			padding-bottom: 1rem
			margin-bottom: 2rem
			border-bottom: 1px solid $grey-200

			&-title
				font-size: $fs-medium
				color: $grey-600

			&-toggle-button
				font-size: $fs-small
				color: $grey-400

				+mq($from: "medium")
					display: none

		&-container
			position: relative

		&-open
			position: absolute
			background-color: $grey-100

			&-request
				font-size: $fs-smaller
				color: $grey-600

				&-mail
					color: $secondary

			&-controls
				display: flex
				flex-direction: column
				align-items: flex-start
				margin: 2rem 0

.news-menu-sources-open
	display: none

	+mq($from: "medium")
			display: block

	&--open
		display: block

	&-control
		font-size: $fs-regular
		color: $grey-600
		&:first-child
			margin-bottom: 1rem

	&-option
		display: flex
		align-items: center
		margin-bottom: 1rem
		font-size: $fs-small
		color: $grey-300
		
		&:last-child
			margin-bottom: 0

		/* Checkbox snippet : https://codepen.io/Vestride/pen/dABHx */
		& input[type="checkbox"]
			position: absolute
			margin: 0 
			opacity: 0

			& + label
				position: relative
				display: flex
				align-items: center

			& + label:before
				content: ''
				display: inline-block
				margin-right: 1rem
				width: 1.25rem
				height: 1.25rem
				vertical-align: text-top

			// Box hover
			&:hover + label:after
				content: ''
				position: absolute
				left: 5px
				top: 15px
				width: 3px
				height: 3px
				box-shadow: 
					-2px 0px 0 $primary,
					2px 0px 0 $primary,
					4px 0px 0 $primary,
					4px -2px 0 $primary,
					4px -4px 0 $primary,
					4px -6px 0 $primary,
					4px -8px 0 $primary,
					4px -10px 0 $primary !important
				background-color: $primary !important
				transform: rotate(45deg)

			// Box checked
			// &:checked + label:before
				// background: $grey-600
				
			// Disabled state label.
			&:disabled + label
				color: $grey-200
				cursor: auto

			// Disabled box.
			&:disabled + label:before
				box-shadow: none
				background: $grey-200

			// Checkmark. Could be replaced with an image
			&:checked + label:after
				content: ''
				position: absolute
				left: 5px
				top: 15px
				width: 3px
				height: 3px
				box-shadow: 
					-2px 0px 0 $grey-600,
					2px 0px 0 $grey-600,
					4px 0px 0 $grey-600,
					4px -2px 0 $grey-600,
					4px -4px 0 $grey-600,
					4px -6px 0 $grey-600,
					4px -8px 0 $grey-600,
					4px -10px 0 $grey-600
				background-color: $grey-600
				transform: rotate(45deg)

		&-logo
			width: 2rem
			height 2rem
			margin-right: .5rem
			border-radius: 100%

		&--active
			& .news-menu-sources-open-option-name
				font-family: $ff-roboto-bold
				color: $grey-600
