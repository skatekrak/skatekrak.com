@import "./stylus-mq"
@import "./styleguide"

/*
	UI STYLES
	Every UI component which need to generic
*/
/*
 * Tooltip base styles
 */
.tooltip
	padding: .5rem !important
	font-size: $fs-smaller
	background-color: $grey-900 !important
	border-radius: .25rem

/*
 * Button primary
 */
.button-primary
	display: inline-flex
	align-items: center
	justify-content: center
	padding: 1rem 2rem
	font-family: $ff-roboto-bold
	border-radius: .25rem
	transition: .3s

	&:disabled
		color: $disableText
		background-color: $disableBackground

		&:hover
			background-color: $disableBackground

	& svg
		height 1.5rem
		width: 1.5rem
		margin-right: 1rem

		& .path
				stroke: $disableText


/*
 * Button with label
 */
.button
	&-with-label
		display: flex
		align-items: center
		font-family: $ff-roboto-regular
		font-size: $fs-small

		&:hover
			text-decoration: underline

		& .icon-full
			margin-right: .5rem

		&-text
			display: none

			+mq($from: "tiny")
				display: inline

			&-action
				text-transform: capitalize

/*
 * Edit button
 */
.edit-button
	display: flex
	align-items: center
	color: $white
	background-color: $grey-800

	&:hover
		background-color: $grey-900

	+mq($from: "tiny")
		display: inline

	&-icon
		display: block
		width: 1rem
		height: 1rem
		margin-right: .5rem

		& svg
			max-width: 100%
			max-height: 100%
			fill: $white

		+mq($from: "tiny")
			display: none
		
		&-text
			display: none

			+mq($from: "tiny")
				display: inline

/*
 * Video player
 */
.video
	&-player
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		background-color: $grey-900
		border-radius: .25rem
		cursor: pointer
		overflow: hidden

		& .react-player__preview
			background-size: 102% !important
			border-radius: .25rem
			transition: .2s

			&:hover
				transform: scale(1.01)

				&:after
					opacity: .25

				& .react-player__play-icon
					background: url('/static/images/icons/player-hover.svg')

			&:after
				content: ''
				position: absolute
				top: 0
				right: 0
				bottom: 0
				left: 0
				background-color: $grey-900
				border-radius: .25rem
				opacity: 0
				transition: .3s
				pointer-events: none
				z-index: 0

		& .react-player__shadow
			background: none !important
			z-index: 1

		& .react-player__play-icon
			height: 4rem
			width: 4rem
			margin: 0 !important
			border: 0 !important
			background: url('/static/images/icons/player.svg')
			background-position: center
			background-repeat: no-repeat
			background-size: cover

		&-container
			position: relative
			padding-top: 56.25%


/*
 * Scroll top
 */
#scroll-top
	display: none
	position: fixed
	bottom: 2rem
	right: 2rem
	width: 2.5rem
	height: 2.5rem
	padding: .5rem
	background-color: $grey-900
	border-radius: .15rem
	transition: .3s

	+mq($from: "medium")
		right: 4rem
		bottom: 4rem
		background-color: inherit

		&:hover
			background-color: $grey-900

			& #scroll-top-icon
				fill: $grey-100

	&-icon
		fill: $grey-100

		+mq($from: "medium")
			fill: $grey-900


/*
 * Banner
 */
#banner-top
	position: fixed
	top: 0
	right: 0
	left: 0
	height: 2.5rem
	display: flex
	justify-content: center
	align-items: center
	font-family: $ff-roboto-condensed-bold
	font-size: $fs-small
	letter-spacing: 0.1rem
	text-transform: uppercase
	background-color: rgb(255, 220, 115)
	opacity: 0
	z-index: 10
	transition: .2s

	&:hover
		color: white
		background-color: rgb(255, 61, 56)

	+mq($from: "medium")
		left: inherit
		width: calc(100% - 250px)

	+mq($from: "large")
		width: calc(100% - 300px)


.banner-top-show
	opacity: 1 !important

