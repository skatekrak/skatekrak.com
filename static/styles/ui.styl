@import "./stylus-mq"
@import "./styleguide"

/*
	UI STYLES
	Every UI component which need to generic
*/

#scroll-top
	display: none
	position: fixed
	bottom: 2rem
	right: 2rem
	width: 2.5rem
	height: 2.5rem
	padding: .5rem
	background-color: $grey-900
	border-radius: .15rem
	transition: .3s

	+mq($from: "medium")
		right: 4rem
		bottom: 4rem
		background-color: inherit

		&:hover
			background-color: $grey-900

			& #scroll-top-icon
				fill: $grey-100

	&-icon
		fill: $grey-100

		+mq($from: "medium")
			fill: $grey-900



.icon
	&-loading
		&-krak
			width: 4rem

			&-text
				transform-origin: center
				animation: rotateLoadingKrakText 2s infinite

@keyframes rotateLoadingKrakText
	0%	{ transform: rotate(0deg) }
	100%	{ transform: rotate(360deg) }


/*
 * Banner
 */
#banner-top
	position: fixed
	top: 0
	right: 0
	left: 0
	height: 2.5rem
	display: flex
	justify-content: center
	align-items: center
	font-family: $ff-roboto-condensed-bold
	font-size: $fs-small
	letter-spacing: 0.1rem
	text-transform: uppercase
	background-color: rgb(255, 220, 115)
	opacity: 0
	z-index: 9999
	transition: .2s

	&:hover
		color: white
		background-color: rgb(255, 61, 56)

	+mq($from: "medium")
		left: inherit
		width: calc(100% - 250px)

	+mq($from: "large")
		width: calc(100% - 300px)


.banner-top-show
	opacity: 1 !important

