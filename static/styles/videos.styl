@import "./stylus-mq"
@import "./styleguide"

/* VIDEOS STYLES */

/* Videos Sidebar */


/* Videos feed */
#videos-feed
	&-header
		margin-bottom: 4rem


/* Video card */
.video
	&-card
		&-container
			margin-bottom: 2rem

			+mq($from: "large")
				margin-bottom: 3rem

			&:last-child
				margin-bottom: 0

		&-title
			margin-top: .5rem
			font-family: $ff-roboto-black
			font-size: $fs-medium

		&-details
			margin: .5rem 0 0
			font-size: $fs-smaller
			color: $grey-400

	&-featured
		position: relative

		&-title
			font-family: $ff-roboto-black
			font-size: $fs-large
			text-align: left

			+mq($from: "small")
				font-size: $fs-larger
			
		&-details
			margin: .75rem 0 .5rem
			font-size: $fs-small
			color: $grey-400
