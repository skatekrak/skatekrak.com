@import "./stylus-mq"
@import "./styleguide"

/* Onboarding popup styles */
.onboarding
	&-preference
		& .modal-two-col
			&-content
				margin-top: 1rem

		& .modal-two-col-second-container
			margin-top: -2rem

			+mq($from: "small")
				margin-top: 0

	& .form-element[data-element-name="brokenDeck"]
		& input
			height: 2rem
			width: 4rem

		+mq($from: "large")
			display: flex
			align-items: center
			margin-bottom: 2rem

			& input
				margin-left: 1rem
