@import "./stylus-mq"
@import "./styleguide"

/*
	AUTHENTICATION STYLES
*/
.auth
	&-container
		position: relative
		display: flex
		min-height: calc(100vh - 8rem)
		width: 100%
		padding-top: 2rem
		padding-bottom: 4rem
		color: $grey-800
		overflow: hidden

		+mq($from: "small")
			min-height: calc(100vh - 12rem)
		
		+mq($from: "medium")
			min-height: 100vh
			color: $grey-100

		&:after, &:before
			content: ''
			display: none
			position: absolute
			top: 0
			right: 0
			left: 0
			bottom: 0
			transform: scale(1.02)

			+mq($from: "medium")
				display: block

		&:after
			background: url('/static/images/club-presentation-bg.jpg')
			background-size: cover
			background-position: center
			filter: blur(6px)
			z-index:2

		&:before
			display: none
			background-color: $grey-900
			opacity: .5
			z-index:3

	&-back
		position: absolute
		top: 2rem
		left: 2rem
		display: flex
		align-items: center
		font-family: $ff-roboto-bold
		font-size: $fs-regular
		line-height: 1.25
		color: $grey-800
		z-index: 4

		&:hover
			text-decoration: underline


		+mq($from: "small")
				top: 5rem
				left: 8rem

		+mq($from: "medium")
				top: 4.5rem
				left: 4rem
				color: $grey-100

		& svg
			width: 1.75rem
			margin-right: .75rem
			fill: $grey-800
			transform: rotate(180deg)

			+mq($from: "medium")
				fill: $grey-100

	&-form
		&-container
			position: relative
			width: 100%
			margin: auto
			text-align: center
			z-index: 4

			+mq($from: "small")
				max-width: 350px

			+mq($from: "medium")
				max-width: 300px

		&-title
			display: flex
			font-family: $ff-roboto-condensed-bold
			font-size: $fs-larger

			&:before
				content: ''
				border-bottom: 1px solid $grey-800
				width: 1rem
				margin: auto 1rem auto auto

				+mq($from: "medium")
					border-color: $grey-100

			&:after
				content: ''
				border-bottom: 1px solid $grey-800
				width: 1rem
				margin: auto auto auto 1rem

				+mq($from: "medium")
					border-color: $grey-100

		&-desc
			margin: 3rem 0

		& input
			border-radius: 4px

		& .form-element-error
			text-align: left

		& .checkbox-container
			font-family: $ff-roboto-condensed-bold
			text-align: left
			color: $grey-400

			+mq($from: "medium")
				color: $grey-200

			& .checkmark
				border: 2px solid $grey-400

				+mq($from: "medium")
					border-color: $grey-200

		&-submit
			display: flex
			justify-content: center
			width: 100%
			margin-top: 2rem
			font-size: $fs-regular
			color: $white
			background-color: $primary

			&:hover
				background-color: $primaryDark

	&-link
		&-container
			display: flex
			margin-top: 1.5rem
			font-size: $fs-small
			color: $grey-400
			text-decoration: underline

			+mq($from: "medium")
				color: $grey-200

			& a
				width: 50%

				&:hover
					color: $grey-800

					+mq($from: "medium")
						color: $white

				&:first-child
					padding-right: 1rem
					text-align: right
					border-right: 1px solid $grey-200

				&:last-child
					padding-left: 1rem
					text-align: left


/* toggle class effect */
.blur-bg
	filter: blur(8px)

	+mq($from: "medium")
		margin-left: -1rem
		padding-left: 1rem
